<header>
<h1 class="greetings">Hello, pet owner!</h1>
</header>


<div class="sign-up-in-container">

<div class="sign-up-container">
  <form method="POST" action="/ownerSignUp">
  <div class="ownerForm"><img src="" alt=""></div>
  
  <div class="owner-form">
    <label for="example-name" class="form-label">Name</label>
    <input name="ownerName" type="text" class="form-control" id="example-name">

    <label for="example-input-email" class="form-label">Email</label>
    <input name="ownerEmail" type="Email" class="form-control" id="example-email">
  </div>

  <div class="owner-form">
    <label for="example-street" class="form-label">Address</label>
    <input name="ownerAddress" type="text" class="form-control" id="example-address">
    
  <div class="form-check owner-form">
    <input value="Amsterdam" class="form-check-input" type="radio" name="ownerCity" id="flexRadioDefault1">
    <label class="formCheckLabel" for="Amsterdam" >Amsterdam</label>
  </div>
  <div class="form-check owner-form"> 
    <input value="Berlin" class="form-check-input"  type="radio" name="ownerCity" id="flexRadioDefault2">
    <label class="formCheckLabel" for="Berlin">
      Berlin
    </label>
  </div>

  <div>
    <div class="form-check owner-form">
      <input value="Netherlands" class="form-check-input" type="radio" name="ownerCountry" id="flexRadioDefault1">
      <label class="formCheckLabel" for="Netherlands">
        Netherlands
      </label>
    </div>
    <div class="form-check owner-form">
      <input value="Germany" class="form-check-input"  type="radio" name="ownerCountry" id="flexRadioDefault2">
      <label class="formCheckLabel" for="Germany">
        Germany
      </label>
    </div>
  </div>
  <div>
    <label for="example-password" class="form-label">Password</label>
    <input name="ownerPassword" type="password" class="form-control" id="example-password">
  </div>
    <div class="form-check owner-form">
    <input value="cat" class="form-check-input" type="radio" name="ownerPet" id="flexRadioDefault1">
    <label class="formCheckLabel" for="cat" >Cat</label>
  </div>
    <div class="form-check owner-form">
    <input value="dog" class="form-check-input" type="radio" name="ownerPet" id="flexRadioDefault1">
    <label class="formCheckLabel" for="dog">Dog</label>
  </div>
  <div class="form-check owner-form">
    <input value="both" class="form-check-input" type="radio" name="ownerPet" id="flexRadioDefault1">
    <label class="formCheckLabel" for="both">Both</label>
  </div>
  <div>
    <label for="example-name" class="form-label">Pet name</label>
    <input name="ownerPetName" type="text" class="form-control" id="example-name">
  </div>
  <div class="owner-form">
    <label for="example-name" class="form-label">About me</label>
    <input name="aboutMe" type="text" class="form-control" id="example-name"></div>

  <button type="submit" class="btn btn-primary blue-btn btn-go-and-find blue-btn">submit</button>
</form>
</div>
</div>

