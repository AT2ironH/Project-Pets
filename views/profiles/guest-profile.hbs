<h1 class="greetings">Welcome to your profile, {{userData.name}}!</h1>

 <div class="btn-section">
    <div class="go-to-all profile-btn">
      <a href="/{{userData._id}}/guestEdit"> <button type="button" class="btn btn-outline-secondary btn-profile">edit your profile</button></a>
      <a href="/{{userData._id}}/guestDelete"> <button type="button" class="btn btn-outline-secondary btn-profile">delete your profile</button></a>    
    </div>
</div>


<div class="box">

  <div class="card card-big mb-3" style="max-width: 1200px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img class="profile-pic" src={{userData.image}}>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h2 class="card-title"><strong>{{userData.name}}</strong> </h2>
        <br>
    <p class="text"> <strong>email:</strong> {{userData.email}}</p>
      <p class="text"><strong>adress:</strong> {{userData.address}}</p>
      <p class="text"><strong>city: </strong> {{userData.city}}</p>
      <p class="text"><strong>country:</strong> {{userData.country}}</p>
      <br>
      <p class="text"><strong>my preference for pet:</strong> {{userData.guestPet}}</p>
      <p class="text"><strong>about me:</strong> {{userData.aboutMe}}</p>

      </div>
    </div>
  </div>
</div>

</div>
